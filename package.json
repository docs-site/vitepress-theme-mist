{
  "version": "1.2.5",
  "description": "vitepress-theme-mist root package",
  "type": "module",
  "private": true,
  "scripts": {
    "docs:dev": "pnpm run -C docs docs:dev",
    "docs:build": "pnpm run -C docs docs:build",
    "docs:preview": "pnpm run -C docs docs:preview",
    "kill:node": "taskkill /f /im node.exe",
    "build": "pnpm run clean && pnpm run to:build build",
    "shell:publish": "bash build/scripts/publish.sh",
    "clean": "rimraf dist",
    "clean:dist": "node build/scripts/clean.js dist",
    "clean:all": "node build/scripts/clean.js all",
    "to:build": "pnpm run -C build",
    "stub": "pnpm run to:build stub && pnpm run packages:stub && pnpm run plugins:stub",
    "packages:stub": "pnpm -r --filter=./packages/* run stub",
    "plugins:stub": "pnpm -r --filter=./plugins/* run stub",
    "plugins:build": "pnpm -r --filter=./plugins/* run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install",
    "cz": "git add . && git-cz",
    "release": "standard-version --no-verify",
    "release-major": "standard-version --release-as major --no-verify",
    "release-minor": "standard-version --release-as minor --no-verify",
    "release-patch": "standard-version --release-as patch --no-verify",
    "release-as": "standard-version --release-as",
    "release-prerelease": "standard-version --prerelease",
    "cs": "changeset",
    "cs:version": "changeset version && pnpm cs:update_other",
    "cs:release": "pnpm run plugins:build && changeset publish",
    "cs:pre": "changeset pre enter",
    "cs:pre:exit": "changeset pre enter exit",
    "cs:update_other": "node build/scripts/changeset_update_version.js",
    "lint:lint-staged": "lint-staged -c .husky/lintstagedrc.js",
    "lint:prettier-check": "prettier ./**/*.{js,jsx,ts,tsx,vue,css,less,sass,scss} --check",
    "lint:prettier-write": "prettier ./**/*.{js,jsx,ts,tsx,vue,css,less,sass,scss} --write",
    "lint:eslint": "eslint . --ext .js,.jsx,.ts,.tsx,.vue --fix"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.14.0",
  "dependencies": {
    "@mist/components": "workspace:*",
    "@mist/composables": "workspace:*",
    "@mist/config": "workspace:*",
    "@mist/helper": "workspace:*",
    "@mist/locale": "workspace:*",
    "@mist/markdown": "workspace:*",
    "@mist/static": "workspace:*",
    "@mist/theme-chalk": "workspace:*",
    "@vue/compiler-dom": "catalog:vue"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "@types/node": "catalog:",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vue/runtime-core": "catalog:vue",
    "@vue/runtime-dom": "catalog:vue",
    "commitizen": "^4.3.1",
    "cz-git": "^1.12.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.4.0",
    "globals": "^16.3.0",
    "husky": "^8.0.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "rimraf": "catalog:",
    "standard-version": "^9.5.0",
    "unbuild": "3.2.0",
    "vitepress": "catalog:",
    "vue": "catalog:",
    "vue-eslint-parser": "^10.2.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "git add CHANGELOG.md && npm run lint:lint-staged"
    }
  }
}
